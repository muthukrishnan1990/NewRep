<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="70dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp"
        >

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/Card_Image"
                android:scaleType="fitXY"
                android:layout_gravity="top"/>

            <!--<RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_thumbnail"
                android:layout_gravity="bottom">-->
            <RelativeLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/img_thumbnail">

                <TextView
                    android:id="@+id/tv_species"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="BMW i8"
                    android:background="@color/colorPrimary"
                    android:textColor="#fff"
                    android:textSize="@dimen/Frame_Text" />

                <LinearLayout
                    android:id="@+id/Textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_species"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="63dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/selling_Price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:text=""
                            android:textSize="@dimen/Frame_Text" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/msrpprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text=""
                        android:textSize="@dimen/Frame_Text" />
                    <TextView
                        android:id="@+id/offerprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="right"
                        android:text=""
                        android:textSize="@dimen/Frame_Text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Textcolor"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/Location_icon_width"
                            android:layout_height="@dimen/Location_icon_Height"
                            android:src="@drawable/location_icon"/>

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/Icon_to_Text_Margin"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:text="Atlanta"
                            android:textSize="@dimen/Frame_Text" />

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="left"
                        android:layout_marginLeft="10dp"
                        android:text="Red"
                        android:textSize="@dimen/Frame_Text" />
                    <TextView
                        android:id="@+id/Condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="New"
                        android:fontFamily="sans-serif"
                        android:textSize="@dimen/Frame_Text"
                        android:layout_weight="1"/>

                </LinearLayout>


            </RelativeLayout>



            </RelativeLayout>

            <!--<TextView
                android:id="@+id/tv_species"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom"
                android:background="#ff444444"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:text="Test"
                android:textColor="#fff"
                android:textSize="20dp" />-->

        <!--</RelativeLayout>-->
    </android.support.v7.widget.CardView>
</LinearLayout>