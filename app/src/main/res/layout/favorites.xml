<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/windowBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/favourites_result_lay_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"></android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You donâ€™t have any favorites, keep looking. "
        android:id="@+id/empty_favorites"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_margin="20dp"/>

   <ImageView
        android:id="@+id/splash_ivicon"
        android:foregroundGravity="center"
        android:src="@drawable/applogo"
        android:layout_above="@+id/empty_favorites"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="160dp"
        android:layout_height="160dp" />





</RelativeLayout>