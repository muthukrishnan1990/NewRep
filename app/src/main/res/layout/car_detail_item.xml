<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/car_thump_width"
        android:layout_height="@dimen/car_thump_Height"
        android:scaleType="fitXY"
        android:id="@+id/Slide_image"
        android:src="@drawable/list_car3"
        android:layout_marginTop="2dp" android:layout_marginBottom="2dp" android:layout_marginRight="3dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Black"
        android:layout_below="@+id/Slide_image"/>


</LinearLayout>